<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:layout_weight="1"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="10dp"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:src="@drawable/logo_splash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:background="#EEF6EF"
        android:backgroundTint="@color/white"
        app:dotsColor="@color/black"
        app:dotsSize="8dp"
        app:dotsSpacing="5dp"
        app:dotsStrokeColor="#5E0A0A0B"
        app:progressMode="true"
        app:selectedDotColor="#9F311B92"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.001"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/i_understand"
        android:textSize="14sp"
        android:buttonTint="@color/red"
        android:visibility="invisible"
        android:id="@+id/check_understand"
        android:textColor="@color/red"
        android:textStyle="bold" />
    <Button
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:clickable="false"
        android:layout_marginTop="15dp"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_start_no"
        android:fontFamily="@font/montserrat"
        android:text="Back to homepage"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/btn_disclaimer" />

</LinearLayout>