<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamshor.audiometry">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_bgn"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_bgn"
        android:supportsRtl="true"
        android:theme="@style/SplashTheme.NoActionBar">
        <activity
            android:name=".User_pwd"
            android:label="@string/title_activity_user_pwd"></activity>
        <activity android:name=".activities.LoginActivity" />
        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/SplashTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.TestActivity" />
        <activity android:name=".activities.BargraphActivity" />
        <activity android:name=".activities.Intro_Signin" />
        <activity android:name=".activities.AudiogramActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>